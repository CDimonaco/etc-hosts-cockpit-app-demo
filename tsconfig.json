{
  "compilerOptions": {
    "outDir": "build/dist",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "jsx": "react",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "paths": {
      "*": ["./pkg/lib/*"]
    },
    "assumeChangesOnlyAffectDirectDependencies": true,
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "composite": true,
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "strictNullChecks": false,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "types": ["typePatches"]
}
